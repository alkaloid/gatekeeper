<h2>Listing companies</h2>
<%= link "New company", to: company_path(@conn, :new) %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Join date</th>
      <th>Members</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for company <- @companies do %>
    <tr>
      <td>
        <%= link company.name, to: company_path(@conn, :show, company) %>
        <%= link "Edit", to: company_path(@conn, :edit, company), class: "btn btn-default btn-xs" %>
        <%= link "Deactivate", to: company_path(@conn, :delete, company), method: :delete, data: [confirm: "This will lock out all of this company's members. Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
      <td><%= company.join_date %></td>
      <td>
        <ul class="member-list">
          <%= for member <- company.members do %>
            <li><%= link member.name, to: company_member_path(@conn, :show, company, member) %></li>
          <% end %>
        </ul>
      </td>

      <td class="text-right">
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New company", to: company_path(@conn, :new) %>
