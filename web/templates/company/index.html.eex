<h2>Listing companies</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Join date</th>
      <th>Departure date</th>
      <th>Members</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for company <- @companies do %>
    <tr>
      <td><%= link company.name, to: company_path(@conn, :show, company) %></td>
      <td><%= company.join_date %></td>
      <td><%= company.departure_date %></td>
      <td>
        <ul class="member-list">
          <%= for member <- company.members do %>
            <li><%= link member.name, to: company_member_path(@conn, :show, company, member) %></li>
          <% end %>
        </ul>
      </td>

      <td class="text-right">
        <%= link "Edit", to: company_path(@conn, :edit, company), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: company_path(@conn, :delete, company), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New company", to: company_path(@conn, :new) %>
